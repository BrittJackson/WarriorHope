extends ../layout

block content
  div(class="container-fluid")
    div(class="container" style="text-align:center, margin-top: 25px;")
      div(class="input-container p-3")
        div(class="form-box" style="text-align: center;")
          form(id="changeEmail" method="post" action="/changeEmail" onsubmit="emailMatch(this)")
            div(class="form-row")
              div(class="form-group col-lg-12")
                h1(class="p-3")
                  i(class="fas fa-at" style="font-size: 3em; color: var(--yellow);")
                h1(class="m-0") Change Email
            div(class="form-row")
              div(class="form-group col-lg-12")
                div(class="input-group")
                  div(class="input-group-prepend")
                    span(class="input-group-text bg-primary boo text-dark") New Email
                  input(type="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}" required class="form-control")
            div(class="form-row")
              div(class="form-group col-lg-12")
                div(class="input-group")
                  div(class="input-group-prepend")
                    span(class="input-group-text bg-primary boo text-dark") Confirm
                  input(type="email" name="emailconfirm" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,3}" required class="form-control")
            div(class="form-row")
              div(class="form-group col-lg-12")
                button(type="submit" class="btn btn-success btn-block") Update
            if(success == 0) 
              div(class="form-row")
                div(class="form-group col-lg-12")
                  div(class="alert alert-danger mt-3") #{msg}
            else if(success == 1) 
              div(class="form-row")
                div(class="form-group col-lg-12")
                  div(class="alert alert-success mt-3") #{msg}
      //- include change_email.html

block append footScript
  script.
    function emailMatch(e) {
      email = e.email.value;
      emailConfirm = e.emailconfirm.value;
      if (email != emailConfirm) {
        alert("Email addresses do not match. Please re-enter email address.");
        return false;
      } else {
        return true;
      }
    }